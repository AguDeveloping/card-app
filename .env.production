# Server configuration
PORT=3000
NODE_ENV=production

# Database (Railway will provide these)
MONGODB_URI=mongodb://admin:password@mongodb.railway.internal:27017/cardapp

# JWT Configuration  
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=1d

# API Configuration
API_REQUIRES_AUTH=true

# Logging
LOG_LEVEL=info
ENABLE_CONSOLE_LOG=true