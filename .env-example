# Server configuration
PORT=3000
NODE_ENV=development

# Database configuration - MongoDB with Docker container credentials
MONGODB_URI=mongodb://admin:password@localhost:27017/card-app?authSource=admin

# API Security - JWT Authentication
JWT_SECRET=your-super-secret-key-change-in-production
JWT_EXPIRES_IN=1d
API_REQUIRES_AUTH=true

# Logging configuration
LOG_LEVEL=debug              # For development
# LOG_LEVEL=info             # For production
# LOG_LEVEL=error            # For production (minimal logging)
ENABLE_CONSOLE_LOG=true      # Force console logging in production
