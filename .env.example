NODE_ENV=production

# Server configuration
PROTOCOL=http
IP=0.0.0.0
PORT=3000

# Database configuration - MongoDB with Docker container credentials
MONGODB_URI=mongodb://admin:password@mongodb-card:27017
MONGODB_AUTHSOURCE=admin
# Database name are set in the application code: 'card-app' for main app database.
# MONGODB_DBNAME=card-app           # For feature-specific databases.

# API Security - JWT Authentication
API_PATH=/api
API_REQUIRES_AUTH=true

JWT_SECRET=your-super-secret-key-change-in-production
JWT_EXPIRES_IN=1d

# Logging configuration
# LOG_LEVEL=debug            # For development
LOG_LEVEL=info               # For production
# LOG_LEVEL=error            # For production (minimal logging)
ENABLE_CONSOLE_LOG=true

# User Owner for management purposes
PASSWORD_OWNER=owner123

# ============================================
# RAILWAY DEPLOYMENT NOTES:
# ============================================
# - PORT        (Railway sets this automatically)
# - MONGO_URL   (provided by Railway MongoDB service)
#
# Set the variables below in service 'backend':
#         [railway variables -s backend set "label=value"]
# These variables are needed for deployment on Railway:
#   [ total # 10 ]
# - NODE_ENV=production
# - MONGODB_URI={{MongoDB.MONGO_URL}}
# - MONGODB_AUTHSOURCE=admin
# - JWT_SECRET=supersecret123...etc          # Change to a secure random string
# - JWT_EXPIRES_IN=1d
# - API_PATH=/api
# - API_REQUIRES_AUTH=true
# - LOG_LEVEL=info
# - ENABLE_CONSOLE_LOG=true
# - API_PASSWORD_OWNER=SuperSecureOwnerPasswordHere
#
# ============================================
# Generate a secure random string
# ============================================
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
